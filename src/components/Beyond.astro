---
interface BeyondItem {
  image: string;
  imageAlt: string;
  title: string;
  org: string;
  description: string;
  link?: string;
}

interface Props {
  items?: BeyondItem[];
}

const { items = [
  {
    image: "/images/beyond/speaking.jpg",
    imageAlt: "Sean speaking at Dallas Software Developers meetup",
    title: "Conference Speaker",
    org: "Dallas Software Developers",
    description: "Regular speaker sharing insights on backend & frontend architecture patterns, and developer productivity.",
  },
  {
    image: "/images/beyond/mentoring.jpg",
    imageAlt: "Team collaboration during coding bootcamp",
    title: "Engineer Team Lead",
    org: "DSD Cohort Program",
    description: "Mentored aspiring developers through their learning journey, conducting code reviews and pair programming sessions.",
  },
  {
    image: "/images/beyond/opensource.jpg",
    imageAlt: "Open source contribution visualization",
    title: "Open Source Contributor",
    org: "Various Projects",
    description: "Contributing to tools I use daily, from bug fixes to documentation improvements and feature development.",
  },
]} = Astro.props;
---

<section id="beyond" class="beyond">
  <div class="container">
    <header class="section-header">
      <span class="section-number">01</span>
      <h2 class="section-title">Beyond the Code</h2>
      <p class="section-subtitle">
        I try to give back to the community that got me to where I am today.
      </p>
    </header>
    
    <div class="grid">
      {items.map((item) => (
        <article class="card">
          <div class="card-image-wrapper">
            <img 
              src={item.image} 
              alt={item.imageAlt}
              class="card-image"
              loading="lazy"
            />
            <div class="card-image-overlay"></div>
          </div>
          <div class="card-content">
            <h3 class="card-title">{item.title}</h3>
            <p class="card-org">{item.org}</p>
            <p class="card-desc">{item.description}</p>
            {item.link && (
              <a href={item.link} class="card-link">
                Learn more â†’
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .beyond {
    padding: var(--space-5xl) 0;
    position: relative;
    z-index: 1;
  }
  
  .section-header {
    margin-bottom: var(--space-3xl);
  }
  
  .section-number {
    font-size: 14px;
    color: var(--color-accent);
    font-weight: 600;
    font-family: var(--font-mono);
  }
  
  .section-title {
    margin-top: var(--space-sm);
    margin-bottom: var(--space-md);
  }
  
  .section-subtitle {
    font-size: 18px;
    color: var(--color-text-muted);
    max-width: 500px;
    line-height: 1.6;
  }
  
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-lg);
  }
  
  .card {
    background-color: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all var(--transition-slow);
  }
  
  .card:hover {
    border-color: var(--color-border-hover);
    transform: translateY(-4px);
  }
  
  .card:hover .card-image {
    transform: scale(1.05);
  }
  
  .card:hover .card-image-overlay {
    opacity: 0.3;
  }
  
  .card-image-wrapper {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
  }
  
  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }
  
  .card-image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(10, 10, 11, 0.4) 100%
    );
    opacity: 0.5;
    transition: opacity var(--transition-slow);
  }
  
  .card-content {
    padding: var(--space-xl);
  }
  
  .card-title {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 4px;
  }
  
  .card-org {
    font-size: 14px;
    color: var(--color-accent);
    margin-bottom: var(--space-md);
  }
  
  .card-desc {
    font-size: 15px;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
  
  .card-link {
    display: inline-block;
    margin-top: var(--space-md);
    font-size: 14px;
    color: var(--color-accent);
    font-weight: 500;
    transition: color var(--transition-base);
  }
  
  .card-link:hover {
    color: var(--color-text-primary);
  }
  
  @media (max-width: 640px) {
    .beyond {
      padding: var(--space-4xl) 0;
    }
    
    .grid {
      grid-template-columns: 1fr;
    }
    
    .card-image-wrapper {
      height: 180px;
    }
  }
</style>
