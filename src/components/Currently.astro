---
interface CurrentItem {
  emoji: string;
  title: string;
  description: string;
}

interface Props {
  items?: CurrentItem[];
}

const { items = [
  {
    emoji: "üîß",
    title: "Audio Processing Pipeline",
    description: "Containerizing a .NET + Python audio service for cloud deployment, exploring the intersection of web APIs and ML-powered audio tools.",
  },
  {
    emoji: "üìö",
    title: "Deep Dive: System Design",
    description: "Studying distributed systems patterns and how they apply to real-world scaling challenges.",
  },
  {
    emoji: "‚úçÔ∏è",
    title: "Technical Writing",
    description: "Documenting lessons learned from production systems‚Äîblog coming soon.",
  },
]} = Astro.props;
---

<section id="currently" class="currently">
  <div class="container">
    <header class="section-header">
      <span class="section-number">03</span>
      <h2 class="section-title">Currently Building</h2>
      <p class="section-subtitle">
        What I'm learning and creating right now.
      </p>
    </header>
    
    <div class="grid">
      {items.map((item) => (
        <article class="card">
          <span class="card-emoji">{item.emoji}</span>
          <h4 class="card-title">{item.title}</h4>
          <p class="card-desc">{item.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .currently {
    padding: var(--space-5xl) 0;
    position: relative;
    z-index: 1;
  }
  
  .section-header {
    margin-bottom: var(--space-3xl);
  }
  
  .section-number {
    font-size: 14px;
    color: var(--color-accent);
    font-weight: 600;
    font-family: var(--font-mono);
  }
  
  .section-title {
    margin-top: var(--space-sm);
    margin-bottom: var(--space-md);
  }
  
  .section-subtitle {
    font-size: 18px;
    color: var(--color-text-muted);
    max-width: 500px;
    line-height: 1.6;
  }
  
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-lg);
  }
  
  .card {
    padding: var(--space-xl);
    background-color: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: all var(--transition-slow);
  }
  
  .card:hover {
    border-color: var(--color-border-hover);
    transform: translateY(-2px);
  }
  
  .card-emoji {
    font-size: 28px;
    margin-bottom: var(--space-md);
    display: block;
  }
  
  .card-title {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: var(--space-sm);
  }
  
  .card-desc {
    font-size: 14px;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
  
  @media (max-width: 640px) {
    .currently {
      padding: var(--space-4xl) 0;
    }
    
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
