---
interface Props {
  name?: string;
  title?: string;
  tagline?: string;
  techStack?: string[];
  stats?: Array<{ number: string; label: string }>;
}

const {
  name = "Sean Campbell",
  title = "Software Engineer & Problem Solver",
  tagline = "I build systems that bridge complex technical challenges with real human needs.",
  techStack = [".NET", "Angular", "Python"],
  stats = [
    { number: "8+", label: "Years Building Software" },
    { number: "15+", label: "Projects Shipped" },
    { number: "âˆž", label: "Cups of Coffee" },
  ],
} = Astro.props;
---

<section class="hero">
  <div class="hero-content">
    <div class="hero-accent" aria-hidden="true"></div>
    
    <p class="greeting animate-fade-in-up">Hi, I'm</p>
    <h1 class="name animate-fade-in-up delay-100">{name}</h1>
    <p class="title animate-fade-in-up delay-200">{title}</p>
    
    <p class="tagline animate-fade-in-up delay-300">
      {tagline} Currently crafting solutions with {' '}
      {techStack.map((tech, i) => (
        <>
          <span class="highlight">{tech}</span>
          {i < techStack.length - 2 && ', '}
          {i === techStack.length - 2 && ', and '}
        </>
      ))}.
    </p>
    
    <div class="stats animate-fade-in-up delay-400">
      {stats.map((stat, i) => (
        <>
          <div class="stat">
            <span class="stat-number">{stat.number}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
          {i < stats.length - 1 && <div class="stat-divider" aria-hidden="true"></div>}
        </>
      ))}
    </div>
    
    <div class="cta-group animate-fade-in-up delay-500">
      <a href="#work" class="cta-primary">View My Work</a>
      <a href="#contact" class="cta-secondary">Get in Touch</a>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 120px 40px 80px;
    position: relative;
    z-index: 1;
  }
  
  .hero-content {
    max-width: var(--content-width);
    position: relative;
  }
  
  .hero-accent {
    position: absolute;
    top: -40px;
    left: -20px;
    width: 4px;
    height: 120px;
    background: linear-gradient(180deg, var(--color-accent), var(--color-accent-secondary), transparent);
    border-radius: 2px;
  }
  
  .greeting {
    font-size: 16px;
    color: var(--color-text-muted);
    margin-bottom: 8px;
    font-weight: 500;
    opacity: 0;
  }
  
  .name {
    font-size: clamp(48px, 8vw, 72px);
    font-weight: 700;
    letter-spacing: -2px;
    margin-bottom: 8px;
    background: linear-gradient(135deg, #ffffff 0%, #a1a1aa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.1;
    opacity: 0;
  }
  
  .title {
    font-size: clamp(20px, 3vw, 24px);
    color: var(--color-accent);
    font-weight: 500;
    margin-bottom: 24px;
    opacity: 0;
  }
  
  .tagline {
    font-size: 18px;
    line-height: 1.7;
    color: var(--color-text-secondary);
    max-width: 600px;
    opacity: 0;
  }
  
  .highlight {
    color: var(--color-text-primary);
    font-weight: 600;
  }
  
  .stats {
    display: flex;
    align-items: center;
    gap: 32px;
    margin-top: 48px;
    padding-top: 32px;
    border-top: 1px solid var(--color-border);
    opacity: 0;
  }
  
  .stat {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  
  .stat-number {
    font-size: 32px;
    font-weight: 700;
    color: var(--color-text-primary);
  }
  
  .stat-label {
    font-size: 13px;
    color: var(--color-text-muted);
    font-weight: 500;
  }
  
  .stat-divider {
    width: 1px;
    height: 40px;
    background-color: var(--color-border);
  }
  
  .cta-group {
    display: flex;
    gap: 16px;
    margin-top: 40px;
    opacity: 0;
  }
  
  .cta-primary,
  .cta-secondary {
    padding: 14px 28px;
    font-size: 15px;
    font-weight: 600;
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
  }
  
  .cta-primary {
    background: var(--color-accent);
    color: var(--color-bg);
  }
  
  .cta-primary:hover {
    background: #7ab8fc;
    transform: translateY(-2px);
  }
  
  .cta-secondary {
    background: transparent;
    color: var(--color-text-secondary);
    border: 1px solid var(--color-border);
  }
  
  .cta-secondary:hover {
    border-color: var(--color-text-muted);
    color: var(--color-text-primary);
  }
  
  @media (max-width: 768px) {
    .hero {
      padding: 100px 20px 60px;
    }
    
    .hero-accent {
      left: -10px;
    }
    
    .stats {
      flex-wrap: wrap;
      gap: 24px;
    }
    
    .stat-divider {
      display: none;
    }
    
    .cta-group {
      flex-direction: column;
    }
    
    .cta-primary,
    .cta-secondary {
      text-align: center;
    }
  }
</style>
